.custom-bar{
  z-index: 100;
  position: fixed;
  background-color: white;
  opacity: 0.9;
  /* filter: blur(1px); */
  width: 100%;
}
.goTop{
  height: 100rpx;
  width: 100rpx;
  position: fixed;
  bottom: 100rpx;
  padding: 10rpx;
  background: rgba(255, 255, 255, 0.618);
  backdrop-filter: blur(1px);
  box-shadow: rgba(167, 167, 167, 0.575) 2rpx 2rpx 4rpx 3rpx;
  right: 100rpx;
  border-radius: 28%;
  z-index: 9999;
}

.wrap {
  width: 100%;
  height: 188px;
  position: absolute;
  top: -18px;
  left: 18px;
  overflow: hidden;
}

.wrap:before {
  content: "";
  display: block;
  border-radius: 8px 8px 0px 0px;
  width: 40px;
  height: 8px;
  position: absolute;
  right: 100px;
  /* background: #4D6530; */
}

.wrap:after {
  content: "";
  display: block;
  border-radius: 0px 8px 8px 0px;
  width: 8px;
  height: 40px;
  position: absolute;
  right: 0px;
  top: 100px;
  /* background: #4D6530; */
}

.ribbon6 {
  display: inline-block;
  text-align: center;
  width: 200px;
  height: 32px;
  line-height: 32px;
  position: absolute;
  top: 30px;
  right: -50px;
  z-index: 2;
  overflow: hidden;
  transform: rotate(45deg);
  -ms-transform: rotate(45deg);
  -moz-transform: rotate(45deg);
  -webkit-transform: rotate(45deg);
  -o-transform: rotate(45deg);
  opacity: 0.8;
  backdrop-filter:blur(2px); 
